<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/bianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/lib_color_tomato"
        android:layout_gravity="top"
        android:padding="12dp"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="top"
        android:textColor="@color/lib_color_blue"
        android:text="话题" />

    <TextView
        android:id="@+id/like"
        android:layout_width="80dp"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content"
        app:lib_corners_radius="24dp"
        app:lib_solid_color="@color/lib_color_tomato"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/ic_like"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1234"
        android:textColor="@color/white"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:drawablePadding="4dp"
        />

</LinearLayout>